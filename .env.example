# FootBot - Configuration Environment Variables
# ═══════════════════════════════════════════════════════════════

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini (Vision/OCR)
GEMINI_API_KEY=your_gemini_api_key_here

# Football Data APIs
FOOTBALL_DATA_API_KEY=your_football_data_org_key_here
API_FOOTBALL_KEY=your_api_football_key_here

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweather_key_here

# MongoDB (optionnel - pour plus tard)
# MONGODB_URI=mongodb:mongodb+srv://faust:faust@cluster0.vvofbgs.mongodb.net/?appName=Cluster0

# App Settings
NODE_ENV=development
LOG_LEVEL=info
CACHE_TTL_MINUTES=30

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=20
